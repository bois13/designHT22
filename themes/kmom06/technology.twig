{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}

    <div class="main" role="main">
        <div class="technology-container">
            <ul class="technology-nav">
                {% for page in pages("technology") if not page.hidden %}
                    <li>
                        <a href="{{ page.url }}">
                            <h2 class="technology">
                                {{ page.title }}
                            </h2>
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <div class="technology-content">
                {{ content }}
            </div>
        </div>
    </div>
    
    {% include 'incl/footer.twig' %}
</body>

</html>
